{
    "name": "node-ts-boilerplate",
    "version": "1.0.0",
    "description": "Node.js application template with Docker, TypeScript, Eslint, and Prettier",
    "main": "dist/index.js",
    "repository": "https://github.com/scottaxcell/node-ts-boilerplate.git",
    "author": "Scott Axcell <scott.axcell@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.10.2",
        "@typescript-eslint/parser": "^5.10.2",
        "eslint": "^8.8.0",
        "eslint-config-prettier": "^8.3.0",
        "prettier": "2.5.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.5.5"
    },
    "scripts": {
        "build": "tsc",
        "clean": "rimraf dist node_modules",
        "format": "./node_modules/.bin/prettier --write .",
        "lint": "./node_modules/.bin/eslint . --ext .js,.jsx,.ts,.tsx",
        "start": "node ."
    }
}
